Vagrant.configure("2") do |config|
  # Define the base box and network settings
  config.vm.box = "generic/ubuntu2004"
  config.vm.box_check_update = true
  config.vm.synced_folder ".", "/vagrant", disabled: true # Disable default synced folders for performance

  # Define the controller node (where Ansible runs from)
  config.vm.define "ansible-controller" do |controller|
    controller.vm.hostname = "ansible-controller"
    controller.vm.network "private_network", ip: "192.168.56.10"
    controller.vm.provider "virtualbox" do |vb|
      vb.name = "ansible-controller"
      vb.memory = "1024"
    end
    # Provisioning the controller with Ansible (installing Ansible on the controller)
    controller.vm.provision "shell", inline: <<-SHELL
      apt-get update -y
      apt-get install -y ansible sshpass
    SHELL
  end

  # Define the managed nodes using a loop
  (1..3).each do |i|
    config.vm.define "node#{i}" do |node|
      node.vm.hostname = "node#{i}"
      node.vm.network "private_network", ip: "192.168.56.#{10 + i}"
      node.vm.provider "virtualbox" do |vb|
        vb.name = "node#{i}"
        vb.memory = "512"
      end
    end
  end
end

